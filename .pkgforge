name 's6-networking'
org 'amylum'

licenses 'COPYING'

deps(
  skalibs: {
    version: '2.7.0.0-1',
    checksum: '21c79f8f9febec4949822879f82ad87e47bb0a1272672d61b7191a1241401154'
  },
  execline: {
    version: '2.5.0.1-1',
    checksum: '9d095a352c4f0697fc5672ab61c7cef4f2c6c58aa3ac0ce4a029e5d8979b6626'
  },
  s6: {
    version: '2.7.2.2-1',
    checksum: 'e05e16f922c6b79ef2eb51c363c76454812f0b5cfed6046161fd37576ae58972'
  },
  's6-dns': {
    version: '2.3.0.1-3',
    checksum: 'cfe63bf6b7a122a40686b45ab5cc183514ba88a171158452c952f4407e47aadc'
  },
  'linux-api-headers': {
    version: '4.20-1',
    checksum: 'aed037b2b3fb2df77ca19359a20188d39c25d011febf4d3733d251fa87ca9636'
  }
)

with_flags = %w(skalibs execline s6-dns s6).map do |dep_name|
  dep_path = dep(dep_name)
  [
    :"with-lib=#{dep_path}/usr/lib/#{dep_name}",
    :"with-lib=#{dep_path}/usr/lib",
    :"with-include=#{dep_path}/usr/include",
    :"with-dynlib=#{dep_path}/usr/lib",
  ]
end.flatten
with_flags = with_flags.map { |x| [x, nil] }.to_h

configure_flags(
  prefix: '/usr',
  'with-sysdeps': "#{dep(:skalibs)}/usr/lib/skalibs/sysdeps",
  **with_flags
)

cflags
harden

build do
  run 'sed -i "s/0700/0755/" package/modes'
  configure
  make
  install
end

test do
  # TODO: add tests
end
