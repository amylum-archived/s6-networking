name 's6-networking'
org 'amylum'

licenses 'COPYING'

deps(
  skalibs: {
    version: '2.8.0.0-1',
    checksum: 'cf094c3ad3b45602521e1cbcd82e3be288f79455819efe4d6c78297cc006f857'
  },
  execline: {
    version: '2.5.1.0-1',
    checksum: '306e4aa72e3b2ba114d1a1b07e9bb8a93d6ca965449e236e6e2f66048c09a18b'
  },
  s6: {
    version: '2.8.0.0-1',
    checksum: 'd98d8268d6a6a8768fb7de053566c9e2fe674ecedce7124b5a029201fd923a2b'
  },
  's6-dns': {
    version: '2.3.0.2-1',
    checksum: '5b1ee4b6c3107006a82b091889b8e5c54df2642e4b772fe7815c46e66cb1480c'
  },
  'linux-api-headers': {
    version: '4.20-1',
    checksum: 'aed037b2b3fb2df77ca19359a20188d39c25d011febf4d3733d251fa87ca9636'
  }
)

with_flags = %w(skalibs execline s6-dns s6).map do |dep_name|
  dep_path = dep(dep_name)
  [
    :"with-lib=#{dep_path}/usr/lib/#{dep_name}",
    :"with-lib=#{dep_path}/usr/lib",
    :"with-include=#{dep_path}/usr/include",
    :"with-dynlib=#{dep_path}/usr/lib",
  ]
end.flatten
with_flags = with_flags.map { |x| [x, nil] }.to_h

configure_flags(
  prefix: '/usr',
  'with-sysdeps': "#{dep(:skalibs)}/usr/lib/skalibs/sysdeps",
  **with_flags
)

cflags
harden

build do
  run 'sed -i "s/0700/0755/" package/modes'
  configure
  make
  install
end

test do
  # TODO: add tests
end
