name 's6-networking'
org 'amylum'

licenses 'COPYING'

deps(
  skalibs: {
    version: '2.6.3.0-1',
    checksum: '5c5a8d96155758c0722bf38bffbcb28945d2b052d4aa02f38b7d648c1e390a6d'
  },
  execline: {
    version: '2.3.0.4-2',
    checksum: 'e034fcba7f77d788eed0d0978a29737c32743dc8e229a0d821e720c6a3533713'
  },
  s6: {
    version: '2.7.0.0-1',
    checksum: '243916a693d5e97da537c9dbc25e92a953676e581c15d1a2937f5aa5d0738193'
  },
  's6-dns': {
    version: '2.3.0.0-1',
    checksum: '46a128be388523ce432f9a0786cba6ffe04f99e313a5445adf3d8bfac5bc1c5b'
  },
  'linux-api-headers': {
    version: '4.14-1',
    checksum: '106c40ebd4826cf8fda5235cb9619e37d79efea6e64545d64bb78d4a829f29a6'
  }
)

with_flags = %w(skalibs execline s6-dns s6).map do |dep_name|
  dep_path = dep(dep_name)
  [
    :"with-lib=#{dep_path}/usr/lib/#{dep_name}",
    :"with-lib=#{dep_path}/usr/lib",
    :"with-include=#{dep_path}/usr/include",
    :"with-dynlib=#{dep_path}/usr/lib",
  ]
end.flatten
with_flags = with_flags.map { |x| [x, nil] }.to_h

configure_flags(
  prefix: '/usr',
  'with-sysdeps': "#{dep(:skalibs)}/usr/lib/skalibs/sysdeps",
  **with_flags
)

cflags
harden

build do
  run 'sed -i "s/0700/0755/" package/modes'
  configure
  make
  install
end

test do
  # TODO: add tests
end
