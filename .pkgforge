name 's6-networking'
org 'amylum'

licenses 'COPYING'

deps(
  skalibs: {
    version: '2.6.0.0-1',
    checksum: 'd5b9c635ef628e51daeb5b1e368382b14c43b5ece2d8acce9db6c7c4bab8c001'
  },
  execline: {
    version: '2.3.0.2-1',
    checksum: '6651db8ef85786401239a4012baafd5a8591869d62ab3cc8c0b4e199ef5e9363'
  },
  s6: {
    version: '2.6.1.0-1',
    checksum: '27133bb4ed75177c1576f9eb90103c29df64cda979cb2a36a2eb2d3ca4633d59'
  },
  's6-dns': {
    version: '2.2.0.1-2',
    checksum: '63ab989d900754faca5ffcb98e94a0662c18135496442b9676a1758f20bb1b89'
  },
  'linux-api-headers': {
    version: '4.13-1',
    checksum: '50b2288419fe132c061bdf3d297293011929abc1092ffaa5e523ad6549b4f5fa'
  }
)

with_flags = %w(skalibs execline s6-dns s6).map do |dep_name|
  dep_path = dep(dep_name)
  [
    :"with-lib=#{dep_path}/usr/lib/#{dep_name}",
    :"with-lib=#{dep_path}/usr/lib",
    :"with-include=#{dep_path}/usr/include",
    :"with-dynlib=#{dep_path}/usr/lib",
  ]
end.flatten
with_flags = with_flags.map { |x| [x, nil] }.to_h

configure_flags(
  prefix: '/usr',
  'with-sysdeps': "#{dep(:skalibs)}/usr/lib/skalibs/sysdeps",
  **with_flags
)

cflags
harden

build do
  run 'sed -i "s/0700/0755/" package/modes'
  configure
  make
  install
end

test do
  # TODO: add tests
end
