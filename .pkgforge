name 's6-networking'
org 'amylum'

licenses 'COPYING'

deps(
  skalibs: {
    version: '2.6.4.0-1',
    checksum: '00d8128bc935f5175c9f24258532593d2b156f0551feec3457abcf48a61cef93'
  },
  execline: {
    version: '2.3.0.4-4',
    checksum: '614cc5b3990a553a166a0e691ce9991fea4aa04444a18f487f644359de313fc3'
  },
  s6: {
    version: '2.7.1.1-1',
    checksum: '68b0fd7cd0c87e33d4daabb5a4ac93d127031f4874ce4f6831fe00167d8fda2f'
  },
  's6-dns': {
    version: '2.3.0.0-4',
    checksum: 'd73cb56ed0b45e7744a5514b091556879fa359baa51fe0a93316e0e243a8ac10'
  },
  'linux-api-headers': {
    version: '4.15-2',
    checksum: 'dbfe68e7620b09fe2996d83fe4ae738dddb2486885b9d5ef3dc27ae77d7585ba'
  }
)

with_flags = %w(skalibs execline s6-dns s6).map do |dep_name|
  dep_path = dep(dep_name)
  [
    :"with-lib=#{dep_path}/usr/lib/#{dep_name}",
    :"with-lib=#{dep_path}/usr/lib",
    :"with-include=#{dep_path}/usr/include",
    :"with-dynlib=#{dep_path}/usr/lib",
  ]
end.flatten
with_flags = with_flags.map { |x| [x, nil] }.to_h

configure_flags(
  prefix: '/usr',
  'with-sysdeps': "#{dep(:skalibs)}/usr/lib/skalibs/sysdeps",
  **with_flags
)

cflags
harden

build do
  run 'sed -i "s/0700/0755/" package/modes'
  configure
  make
  install
end

test do
  # TODO: add tests
end
