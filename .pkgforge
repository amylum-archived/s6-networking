name 's6-networking'
org 'amylum'

licenses 'COPYING'

deps(
  skalibs: {
    version: '2.7.0.0-1',
    checksum: '21c79f8f9febec4949822879f82ad87e47bb0a1272672d61b7191a1241401154'
  },
  execline: {
    version: '2.5.0.1-1',
    checksum: '9d095a352c4f0697fc5672ab61c7cef4f2c6c58aa3ac0ce4a029e5d8979b6626'
  },
  s6: {
    version: '2.7.2.0-1',
    checksum: '7f7b402a59d191b6b8a1120129aacb0a73537d05f040d1616de5efcfeafda665'
  },
  's6-dns': {
    version: '2.3.0.1-2',
    checksum: '68667f85b0898d8bcc48f88fce4accfcca0e98f56c50e7ef62c562d9d3725d72'
  },
  'linux-api-headers': {
    version: '4.19-1',
    checksum: 'de68cab17c2354ee660b269ccca30e275a9314563ebdfb4f427fc5ebe1395f30'
  }
)

with_flags = %w(skalibs execline s6-dns s6).map do |dep_name|
  dep_path = dep(dep_name)
  [
    :"with-lib=#{dep_path}/usr/lib/#{dep_name}",
    :"with-lib=#{dep_path}/usr/lib",
    :"with-include=#{dep_path}/usr/include",
    :"with-dynlib=#{dep_path}/usr/lib",
  ]
end.flatten
with_flags = with_flags.map { |x| [x, nil] }.to_h

configure_flags(
  prefix: '/usr',
  'with-sysdeps': "#{dep(:skalibs)}/usr/lib/skalibs/sysdeps",
  **with_flags
)

cflags
harden

build do
  run 'sed -i "s/0700/0755/" package/modes'
  configure
  make
  install
end

test do
  # TODO: add tests
end
