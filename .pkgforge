name 's6-networking'
org 'amylum'

licenses 'COPYING'

deps(
  skalibs: {
    version: '2.6.1.0-1',
    checksum: '2d1aa2cf401454ed932d86c3cf47382b7b1b286236eb992466fa799928ccfc5b'
  },
  execline: {
    version: '2.3.0.3-3',
    checksum: '359439a3c9f406af66baf581631dbb09541ecf91a5847b460dff8b12d5d5d9a2'
  },
  s6: {
    version: '2.6.1.1-3',
    checksum: 'a856f54b4abf2156108badc99c9d4447a1760c6bd7434e9d2e163555a1f94078'
  },
  's6-dns': {
    version: '2.2.0.1-5',
    checksum: '39e809a37dc19710970304e8af2d694d303dece13649b83335327f121a0e0af3'
  },
  'linux-api-headers': {
    version: '4.13-1',
    checksum: '50b2288419fe132c061bdf3d297293011929abc1092ffaa5e523ad6549b4f5fa'
  }
)

with_flags = %w(skalibs execline s6-dns s6).map do |dep_name|
  dep_path = dep(dep_name)
  [
    :"with-lib=#{dep_path}/usr/lib/#{dep_name}",
    :"with-lib=#{dep_path}/usr/lib",
    :"with-include=#{dep_path}/usr/include",
    :"with-dynlib=#{dep_path}/usr/lib",
  ]
end.flatten
with_flags = with_flags.map { |x| [x, nil] }.to_h

configure_flags(
  prefix: '/usr',
  'with-sysdeps': "#{dep(:skalibs)}/usr/lib/skalibs/sysdeps",
  **with_flags
)

cflags
harden

build do
  run 'sed -i "s/0700/0755/" package/modes'
  configure
  make
  install
end

test do
  # TODO: add tests
end
