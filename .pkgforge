name 's6-networking'
org 'amylum'

licenses 'COPYING'

deps(
  skalibs: {
    version: '2.6.4.0-1',
    checksum: '00d8128bc935f5175c9f24258532593d2b156f0551feec3457abcf48a61cef93'
  },
  execline: {
    version: '2.5.0.0-1',
    checksum: 'cd55280a95abdb992d3acddaac614cb7d8a1d8733b5f41acf82b1f842d449141'
  },
  s6: {
    version: '2.7.1.1-2',
    checksum: 'aaca5f51c053dd767475f2a04fdbd0fa0a96dee4cc40ff19072189b0297c97da'
  },
  's6-dns': {
    version: '2.3.0.0-5',
    checksum: '01ce53dfe1849eabac45c9ccbaf1cd213dd6e660d4ee7b2a3eb4cd0ab362b327'
  },
  'linux-api-headers': {
    version: '4.16-1',
    checksum: '55af258de8663de5ec97db875651eaeecc209b47454dbbf27757d4de595e618d'
  }
)

with_flags = %w(skalibs execline s6-dns s6).map do |dep_name|
  dep_path = dep(dep_name)
  [
    :"with-lib=#{dep_path}/usr/lib/#{dep_name}",
    :"with-lib=#{dep_path}/usr/lib",
    :"with-include=#{dep_path}/usr/include",
    :"with-dynlib=#{dep_path}/usr/lib",
  ]
end.flatten
with_flags = with_flags.map { |x| [x, nil] }.to_h

configure_flags(
  prefix: '/usr',
  'with-sysdeps': "#{dep(:skalibs)}/usr/lib/skalibs/sysdeps",
  **with_flags
)

cflags
harden

build do
  run 'sed -i "s/0700/0755/" package/modes'
  configure
  make
  install
end

test do
  # TODO: add tests
end
