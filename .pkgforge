name 's6-networking'
org 'amylum'

licenses 'COPYING'

deps(
  skalibs: {
    version: '2.6.0.2-1',
    checksum: '98ce366ca6a1f7876c78cf1c2b694ad13f8d735962a1c01b1e0bc73e66f3a1c7'
  },
  execline: {
    version: '2.3.0.3-2',
    checksum: 'acfcd9b7a1fcd6d2d1fb9f3eb2c3e537aae5e8431bf2605f0be466d28181f3a3'
  },
  s6: {
    version: '2.6.1.1-2',
    checksum: '0a95cce22b9d93449e805edc40359a44b6d2c3463e36e76b25b61b043e2894a4'
  },
  's6-dns': {
    version: '2.2.0.1-4',
    checksum: 'da1b6c53433c44ae39a8ef7722d8e095f8b53c548f5840ec61b6c32c539ca93f'
  },
  'linux-api-headers': {
    version: '4.13-1',
    checksum: '50b2288419fe132c061bdf3d297293011929abc1092ffaa5e523ad6549b4f5fa'
  }
)

with_flags = %w(skalibs execline s6-dns s6).map do |dep_name|
  dep_path = dep(dep_name)
  [
    :"with-lib=#{dep_path}/usr/lib/#{dep_name}",
    :"with-lib=#{dep_path}/usr/lib",
    :"with-include=#{dep_path}/usr/include",
    :"with-dynlib=#{dep_path}/usr/lib",
  ]
end.flatten
with_flags = with_flags.map { |x| [x, nil] }.to_h

configure_flags(
  prefix: '/usr',
  'with-sysdeps': "#{dep(:skalibs)}/usr/lib/skalibs/sysdeps",
  **with_flags
)

cflags
harden

build do
  run 'sed -i "s/0700/0755/" package/modes'
  configure
  make
  install
end

test do
  # TODO: add tests
end
