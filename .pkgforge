name 's6-networking'
org 'amylum'

licenses 'COPYING'

deps(
  skalibs: {
    version: '2.6.2.0-1',
    checksum: '4f9fa0f805cf3af689ad89f870d66736df936539663d61fb910bfb847bb09026'
  },
  execline: {
    version: '2.3.0.4-1',
    checksum: '80c342723df1b30540e76d4e7d7a676f5dc69659babc801b7e9e390040edbcc0'
  },
  s6: {
    version: '2.6.2.0-1',
    checksum: 'cc91100c2f42617f729e8aac094731953631ed63db4a780ac0fd3fd79de58a45'
  },
  's6-dns': {
    version: '2.2.0.1-7',
    checksum: '4df4e45cfd3284bab4c0517abae338c5190787610e3c6b361e431c36773f1ce2'
  },
  'linux-api-headers': {
    version: '4.14-1',
    checksum: '106c40ebd4826cf8fda5235cb9619e37d79efea6e64545d64bb78d4a829f29a6'
  }
)

with_flags = %w(skalibs execline s6-dns s6).map do |dep_name|
  dep_path = dep(dep_name)
  [
    :"with-lib=#{dep_path}/usr/lib/#{dep_name}",
    :"with-lib=#{dep_path}/usr/lib",
    :"with-include=#{dep_path}/usr/include",
    :"with-dynlib=#{dep_path}/usr/lib",
  ]
end.flatten
with_flags = with_flags.map { |x| [x, nil] }.to_h

configure_flags(
  prefix: '/usr',
  'with-sysdeps': "#{dep(:skalibs)}/usr/lib/skalibs/sysdeps",
  **with_flags
)

cflags
harden

build do
  run 'sed -i "s/0700/0755/" package/modes'
  configure
  make
  install
end

test do
  # TODO: add tests
end
