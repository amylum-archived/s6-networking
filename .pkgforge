name 's6-networking'
org 'amylum'

licenses 'COPYING'

deps(
  skalibs: {
    version: '2.6.0.1-1',
    checksum: '1ab7f65c7b5c058cb22606310c8b98230b50cb2e500215ac892359135e0a45b9'
  },
  execline: {
    version: '2.3.0.3-1',
    checksum: '676b2f73a1e8131940ee39fcf444728f23e6de7e1ad09bd354f3cc0e78a70a9e'
  },
  s6: {
    version: '2.6.1.1-1',
    checksum: '4b007f6ab18f708d0fe87ab9baa687c48213792c6e8bef53f7255b35feb59638'
  },
  's6-dns': {
    version: '2.2.0.1-3',
    checksum: '166547f71d7f6e830c5b440358d511f879646a4ad056cbbd7c9564f3dff8779a'
  },
  'linux-api-headers': {
    version: '4.13-1',
    checksum: '50b2288419fe132c061bdf3d297293011929abc1092ffaa5e523ad6549b4f5fa'
  }
)

with_flags = %w(skalibs execline s6-dns s6).map do |dep_name|
  dep_path = dep(dep_name)
  [
    :"with-lib=#{dep_path}/usr/lib/#{dep_name}",
    :"with-lib=#{dep_path}/usr/lib",
    :"with-include=#{dep_path}/usr/include",
    :"with-dynlib=#{dep_path}/usr/lib",
  ]
end.flatten
with_flags = with_flags.map { |x| [x, nil] }.to_h

configure_flags(
  prefix: '/usr',
  'with-sysdeps': "#{dep(:skalibs)}/usr/lib/skalibs/sysdeps",
  **with_flags
)

cflags
harden

build do
  run 'sed -i "s/0700/0755/" package/modes'
  configure
  make
  install
end

test do
  # TODO: add tests
end
