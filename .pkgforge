name 's6-networking'
org 'amylum'

licenses 'COPYING'

deps(
  skalibs: {
    version: '2.6.3.1-1',
    checksum: '62a102ff701f15879ee21b867db14e4cf170b7e1be34af60c65c7b6684bf1ee7'
  },
  execline: {
    version: '2.3.0.4-3',
    checksum: '86495dd8daf3b3ca4045960fd3cc37b4739b46fc9d9bb0775c7de0bab67f971e'
  },
  s6: {
    version: '2.7.0.0-2',
    checksum: '853d312ffd6f312f1f38c4e7fe1c07c1a4da13b8c7bc792162cc572cc701cb01'
  },
  's6-dns': {
    version: '2.3.0.0-3',
    checksum: '0743f80be71a0d1238ffa0b49d25c401e1e3eb638664eb093c09ea2b4543b7d3'
  },
  'linux-api-headers': {
    version: '4.15-2',
    checksum: 'dbfe68e7620b09fe2996d83fe4ae738dddb2486885b9d5ef3dc27ae77d7585ba'
  }
)

with_flags = %w(skalibs execline s6-dns s6).map do |dep_name|
  dep_path = dep(dep_name)
  [
    :"with-lib=#{dep_path}/usr/lib/#{dep_name}",
    :"with-lib=#{dep_path}/usr/lib",
    :"with-include=#{dep_path}/usr/include",
    :"with-dynlib=#{dep_path}/usr/lib",
  ]
end.flatten
with_flags = with_flags.map { |x| [x, nil] }.to_h

configure_flags(
  prefix: '/usr',
  'with-sysdeps': "#{dep(:skalibs)}/usr/lib/skalibs/sysdeps",
  **with_flags
)

cflags
harden

build do
  run 'sed -i "s/0700/0755/" package/modes'
  configure
  make
  install
end

test do
  # TODO: add tests
end
